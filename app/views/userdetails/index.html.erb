<p id="notice"><%= notice %></p>

<h1>Listing Userdetails</h1>

<table>
  <thead>
    <tr>
      <th>Nick</th>
      <th>Notifications allowed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userdetails.each do |userdetail| %>
      <tr>
        <td><%= userdetail.nick %></td>
        <td><%= userdetail.notifications_allowed %></td>
        <td><%= link_to 'Show', userdetail %></td>
        <td><%= link_to 'Edit', edit_userdetail_path(userdetail) %></td>
        <td><%= link_to 'Destroy', userdetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

