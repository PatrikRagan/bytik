<p id="notice"><%= notice %></p>

<h1>Listing Scraps</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>City</th>
      <th>Part of town</th>
      <th>Room count</th>
      <th>Keywords</th>
      <th>Price min</th>
      <th>Price max</th>
      <th>Last search time</th>
      <th>Number of results</th>
      <th>Time of result expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scraps.each do |scrap| %>
      <tr>
        <td><%= scrap.city %></td>
        <td><%= scrap.part_of_town %></td>
        <td><%= scrap.room_count %></td>
        <td><%= scrap.keywords %></td>
        <td><%= scrap.price_min %></td>
        <td><%= scrap.price_max %></td>
        <td><%= scrap.last_search_time %></td>
        <td><%= scrap.number_of_results %></td>
        <td><%= scrap.time_of_result_expiration %></td>
        <td><%= link_to 'Show', scrap %></td>
        <td><%= link_to 'Edit', edit_scrap_path(scrap) %></td>
        <td><%= link_to 'Destroy', scrap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

