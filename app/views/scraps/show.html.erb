<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-lg-offset-1 col-lg-3">
    <p>
      <strong>City:</strong>
      <%= @scrap.city %>
    </p>

    <p>
      <strong>Part of town:</strong>
      <%= @scrap.part_of_town %>
    </p>

    <p>
      <strong>Room count:</strong>
      <%= @scrap.room_count %>
    </p>

    <p>
      <strong>Keywords:</strong>
      <%= @scrap.keywords %>
    </p>
  </div>
  <div class="col-lg-offset-1 col-lg-3">
    <p>
      <strong>Price min:</strong>
      <%= @scrap.price_min %>
    </p>

    <p>
      <strong>Price max:</strong>
      <%= @scrap.price_max %>
    </p>

    <p>
      <strong>Last search time:</strong>
      <%= @scrap.last_search_time %>
    </p>

    <p>
      <strong>Number of results:</strong>
      <%= @scrap.number_of_results %>
    </p>

    <p>
      <strong>Time of result expiration:</strong>
      <%= @scrap.time_of_result_expiration %>
    </p>
  </div>


  <div class="col-lg-offset-1 col-lg-3">
    <%= link_to 'Edit', edit_scrap_path(@scrap), class: "btn btn-primary" %> |
    <%= link_to 'Back', scraps_path, class: "btn btn-primary" %>
  </div>
</div>

  <div class="col-lg-8 col-lg-offset-0">
    <h1>Listing Flats</h1>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
        <th>Price</th>
        <th>Room</th>
        <th>Date of creation</th>
        <th>Date of Scrap</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @flats.each do |flat| %>
          <tr>
            <td><%= flat.name %></td>
            <td><%= flat.content %></td>
            <td><%= flat.price %></td>
            <td><%= flat.room %></td>
            <td><%= flat.date_of_creation %></td>
            <td><%= flat.date_of_scrap %></td>
            <td><%= link_to 'Show', flat %></td>
            <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
            <td><%= link_to 'Destroy', flat, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-4 col-lg-offset-0">
    <div id="sticky_commentaries">
      <%= render partial: 'scraps/commentaries' %>
    </div>
  </div>