<p id="notice"><%= notice %></p>

<h1>Listing Flats</h1>
<%= react_component('Modal', {scraps: @scraps_a, name: "xXXXx"}, {class: ""}) %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>Room</th>
      <th>Date of creation</th>
      <th>Date of Scrap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.name %></td>
        <td><%= flat.content %></td>
        <td><%= flat.price %></td>
        <td><%= flat.room %></td>
        <td><%= flat.date_of_creation %></td>
        <td><%= flat.date_of_scrap %></td>
        <td><%= link_to 'Show', flat %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

